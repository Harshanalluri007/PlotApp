<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red">
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="106dp"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:text="Plot points"
        android:textColor="@color/red"
        android:background="@color/yell"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:text="plot Bar Graph"
        android:background="@color/yell"
        android:textColor="@color/red"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="31dp"
        android:text="Select Your Module:"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/bell"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:text="PLOT LINE GRAPH"
        android:textColor="@color/red"
        android:background="@color/yell"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:text="PLOT SINE GRAPH"
        android:textColor="@color/red"
        android:background="@color/yell"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:text="Plot Point Graph"
        android:textColor="@color/red"
        android:background="@color/yell"/>

</RelativeLayout>
