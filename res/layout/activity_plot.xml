<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    tools:context="com.example.harshanalluri.datavisualizationapp.PlotApp">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.tabian.scatterplotdynamic.MainActivity">

        <com.jjoe64.graphview.GraphView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:id="@+id/scatterPlot"/>

        <Button
            android:text="Add Point"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAddPt"
            android:layout_below="@+id/scatterPlot"

            android:background="@color/yell"/>

        <EditText
            android:background="@android:drawable/editbox_background"
            android:textAlignment="center"
            android:hint="x-coordinate"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:inputType="numberSigned"
            android:ems="10"
            android:layout_below="@+id/scatterPlot"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/numX"/>

        <EditText
            android:background="@android:drawable/editbox_background"
            android:textAlignment="center"
            android:hint="y-coordinate"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:inputType="numberSigned"
            android:ems="10"
            android:layout_below="@+id/numX"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/numY"/>



    </RelativeLayout>

</android.support.constraint.ConstraintLayout>